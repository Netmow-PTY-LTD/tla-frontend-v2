{
  "extends": [
    "next",
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "globals": {
    "React": "readonly"
  },
  "overrides": [
    {
      "files": ["*.stories.@(ts|tsx|js|jsx|mjs|cjs)"]
    }
  ],
  "rules": {
    "no-unused-vars": [
      "off",
      { "args": "after-used", "argsIgnorePattern": "^_" }
    ],
    "react/no-unescaped-entities": "off",
    "react/prop-types": "off",
    "react/no-unknown-property": "off"
  }
}
